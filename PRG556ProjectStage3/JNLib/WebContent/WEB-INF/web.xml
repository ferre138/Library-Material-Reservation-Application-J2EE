<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>JNLib</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>showmaterialreservations.jspx</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <display-name>LimaraMenuFilter</display-name>
    <filter-name>LimaraMenuFilter</filter-name>
    <filter-class>com.jfbc.LimaraMenuFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LimaraMenuFilter</filter-name>
    <url-pattern>/limaramenu.jspx</url-pattern>
    <dispatcher>INCLUDE</dispatcher>
  </filter-mapping>
  <error-page>
    <exception-type>com.imthebest.BadRequestException</exception-type>
    <location>/badrequest.jspx</location>
  </error-page>
  <filter>
    <display-name>AccountAccessFilter</display-name>
    <filter-name>AccountAccessFilter</filter-name>
    <filter-class>com.imthebest.AccountAccessFilter</filter-class>
    <init-param>
      <description></description>
      <param-name>url</param-name>
      <param-value>REDIRECT</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>AccountAccessFilter</filter-name>
    <url-pattern>*.jspx</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.imthebest.LimaraRequestListener</listener-class>
  </listener>
  <filter>
    <display-name>ControlFilter</display-name>
    <filter-name>ControlFilter</filter-name>
    <filter-class>ca.on.senecac.prg556.common.ControlFilter</filter-class>
    <init-param>
      <param-name>control-filter-properties</param-name>
      <param-value>/WEB-INF/control-filter.xml</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>ControlFilter</filter-name>
    <url-pattern>*.jspx</url-pattern>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter>
    <display-name>RedirectFilter</display-name>
    <filter-name>RedirectFilter</filter-name>
    <filter-class>ca.on.senecac.prg556.common.RedirectFilter</filter-class>
    <init-param>
      <description></description>
      <param-name>url</param-name>
      <param-value>/showmaterialreservations.jspx</param-value>
    </init-param>
    <init-param>
      <param-name>method</param-name>
      <param-value>REDIRECT</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>RedirectFilter</filter-name>
    <url-pattern>/</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <resource-ref>
    <res-ref-name>LimaraDS</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <listener>
    <listener-class>com.jfbc.LimaraContextListener</listener-class>
  </listener>
</web-app>